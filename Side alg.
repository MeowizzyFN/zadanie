#include <iostream>
#include <string.h>
#include <conio.h>
#include <fstream>
#include <string.h>

using namespace std;

int main(int argc, int* argv[])
{
	setlocale(LC_ALL, "Russian");

	do {
		int s = 0;
		int k = 0;
		int i = 0;
		char a;

		ifstream f2("1.txt");
		while (f2 >> a) {
			k++; //fffff
		}
		f2.close();

		int* mass = new int[k];

		ifstream f("1.txt");

		if (!f.is_open()) {
			cout << "Ошибка открытия файла!" << endl;
			return 1;
		}
		else {
			cout << "Файл открыт." << endl;
		}

		for (int i = 0; i < k; i++) {
			f >> mass[i];
		}

		for (int i = 0; i < k; i++) {
			cout << mass[i] << " ";
		}
		cout << endl;


		int type = 1;

		do {
			cout << "1 - сортировка по возрастанию, 2 - по убыванию\n>";
			cin >> type;
			if (type != 1 && type != 2) {
				cout << "Неверное значение." << endl;
				continue;
			}
			else
				break;
		} while (1);

		for (int i = 0, Z; i < k; i++) {
			for (int j = 0; j < k - 1; j++) {
				switch (type) {
				case 1:
					if (mass[j] > mass[j + 1]) {
						Z = mass[j];
						mass[j] = mass[j + 1];
						mass[j + 1] = Z;
					}

					break;
				case 2:
					if (mass[j] < mass[j + 1]) {
						Z = mass[j];
						mass[j] = mass[j + 1];
						mass[j + 1] = Z;
					}
					break;
				}
			}
		}
		ofstream fout("2.txt");
		for (int i = 0, Z; i < k; i++) {
			fout << mass[i] << " ";
		}	

		if (type == 1)
			cout << "Ваша возрастающая последовательность: " << endl;
		else
			cout << "Ваша убывающая последовательность: " << endl;
		for (int i = 0; i < k; i++)
			cout << mass[i] << " ";

		cout << endl;

		delete mass;

		int choise = 0;

		cout << "Для повторного исполнения введите 1, для выхода - любое число\n>";
		cin >> choise;

		if (choise == 1)
			continue;
		else
			break;

	} while (1);
	system("pause");
}
